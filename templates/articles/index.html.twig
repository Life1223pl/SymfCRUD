{% extends 'base.html.twig' %}
{% block title %} SymfCRUD Products {% endblock %}
{% block body %}

    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
            <tr>
                <th>Product Title</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>
                        <a href="/article/{{ article.id }}" class="btn btn-dark">Show</a>
                        <a href="/article/update/{{ article.id }}" class="btn btn-primary">Edit</a>
                        <a href="/article/delete/{{ article.id }}" class="btn btn-danger">Delete</a>

                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No articles to display</p>
    {% endif %}

{% endblock %}
